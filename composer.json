{
    "name": "rollerworks/search",
    "description": "Advanced search-building framework",
    "keywords": ["filter", "search", "doctrine"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastiaan Stok",
            "email": "s.stok@rollercapes.net"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Rollerworks/RollerworksSearch/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/options-resolver": "~2.1",
        "symfony/property-access": "~2.2",
        "symfony/intl": "~2.3",
        "symfony/yaml": "~2.1",
        "symfony/validator": "~2.1",
        "seld/jsonlint": "1.*"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1@dev",
        "symfony/class-loader": "~2.1",
        "symfony/browser-kit": "~2.1",
        "symfony/dependency-injection": "~2.1",
        "jms/metadata": ">=1.1.1",
        "doctrine/annotations": "~1.1"
    },
    "suggest": {
        "jms/metadata": "Metadata mapping library"
    },
    "autoload": {
        "psr-4": { "Rollerworks\\Component\\Search\\": "src/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
