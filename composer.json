{
    "name": "rollerworks/search",
    "description": "Advanced search-building framework",
    "keywords": ["filter", "search", "doctrine"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastiaan Stok",
            "email": "s.stok@rollercapes.net"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Rollerworks/Search/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/options-resolver":  "~2.1",
        "symfony/yaml":              "~2.1",
        "symfony/validator":         "~2.1",
        "jms/metadata":              ">=1.1.1",
        "rollerworks/locale":        "1.0.*@dev",
        "seld/jsonlint":             "1.*"
    },
    "require-dev": {
        "phpspec/phpspec": "2.0.*@dev",
        "doctrine/orm": "~2.3,>=2.3.0",
        "doctrine/doctrine-bundle": ">=1.1",
        "rollerworks/cache-bundle": "1.0.*@dev",
        "symfony/class-loader": "~2.1",
        "symfony/browser-kit": "~2.1"
    },
    "suggest": {
        "doctrine/orm": "Required for Doctrine\\ORM component, also requires doctrine/doctrine-bundle to be installed."
    },
    "autoload": {
        "psr-0": { "Rollerworks\\Component\\Search\\": "src/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Rollerworks\\Component\\Locale\\Composer\\ScriptHandler::updateLocaleData"
        ],
        "post-update-cmd": [
            "Rollerworks\\Component\\Locale\\Composer\\ScriptHandler::updateLocaleData"
        ]
    }
}
