{
    "name": "rollerworks/search-api-platform",
    "description": "API-Platform integration bridge for RollerworksSearch",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastiaan Stok",
            "email": "s.stok@rollerscapes.net"
        }
    ],
    "require": {
        "php": "^7.1",
        "rollerworks/search-processor": "^0.2.0",
        "rollerworks/search": "^2.0,>=2.0.0-ALPHA2",
        "rollerworks/uri-encoder": "^1.1.0",
        "api-platform/core": "^2.0.3",
        "symfony/http-foundation": "^3.2.6"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^3.2.6",
        "rollerworks/search-doctrine-orm": "^2.0,>2.0.0-ALPHA1",
        "doctrine/orm": "^2.5.6"
    },
    "autoload": {
        "psr-4": {
            "Rollerworks\\Component\\Search\\ApiPlatform\\": "src/"
        },
        "exclude-from-classmap": [
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rollerworks\\Component\\Search\\ApiPlatform\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
