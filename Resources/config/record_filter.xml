<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rollerworks_record_filter.input.query_filter.class">Rollerworks\RecordFilterBundle\Input\QueryFilter</parameter>
        <parameter key="rollerworks_record_filter.input.config_processor.class">Rollerworks\RecordFilterBundle\Input\ConfigProcessor</parameter>

        <parameter key="rollerworks_record_filter.metadata_factory.class">Metadata\MetadataFactory</parameter>
        <parameter key="rollerworks_record_filter.metadata.annotation_driver.class">Rollerworks\RecordFilterBundle\Metadata\Driver\AnnotationDriver</parameter>

        <parameter key="rollerworks_record_filter.formatter.class">Rollerworks\RecordFilterBundle\Formatter\Formatter</parameter>

        <!-- Formatter modifiers classes -->
        <parameter key="rollerworks_record_filter.formatter.modifiers.validator.class">Rollerworks\RecordFilterBundle\Formatter\Modifier\Validator</parameter>
        <parameter key="rollerworks_record_filter.formatter.modifiers.duplicate_remove.class">Rollerworks\RecordFilterBundle\Formatter\Modifier\DuplicateRemove</parameter>
        <parameter key="rollerworks_record_filter.formatter.modifiers.range_normalizer.class">Rollerworks\RecordFilterBundle\Formatter\Modifier\RangeNormalizer</parameter>
        <parameter key="rollerworks_record_filter.formatter.modifiers.values_to_range.class">Rollerworks\RecordFilterBundle\Formatter\Modifier\ValuesToRange</parameter>
        <parameter key="rollerworks_record_filter.formatter.modifiers.compare_normalizer.class">Rollerworks\RecordFilterBundle\Formatter\Modifier\CompareNormalizer</parameter>
        <parameter key="rollerworks_record_filter.formatter.modifiers.value_optimizer.class">Rollerworks\RecordFilterBundle\Formatter\Modifier\ValueOptimizer</parameter>
    </parameters>

    <services>
        <service id="rollerworks_record_filter.metadata.annotation_driver" class="%rollerworks_record_filter.metadata.annotation_driver.class%" public="false">
            <argument type="service" id="annotation_reader" />
        </service>

        <service id="rollerworks_record_filter.metadata_factory" class="%rollerworks_record_filter.metadata_factory.class%" public="false">
            <argument type="service" id="rollerworks_record_filter.metadata.annotation_driver" />
        </service>

        <!-- Input classes -->
        <service id="rollerworks_record_filter.input.query_filter" class="%rollerworks_record_filter.input.query_filter.class%">
            <call method="setTranslator">
                <argument type="service" id="translator"/>
            </call>
        </service>

        <service id="rollerworks_record_filter.input.config_processor" class="%rollerworks_record_filter.input.config_processor.class%">
            <call method="setTranslator">
                <argument type="service" id="translator"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="rollerworks_record_filter.formatter" class="%rollerworks_record_filter.formatter.class%">
            <argument type="service" id="translator"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Formatter modifiers services -->
        <service id="rollerworks_record_filter.formatter_factory.modifiers.validator" class="%rollerworks_record_filter.formatter.modifiers.validator.class%">
            <tag name="rollerworks_record_filter.formatter_modifier" priority="1000"/>
        </service>

        <service id="rollerworks_record_filter.formatter_factory.modifiers.duplicate_remove" class="%rollerworks_record_filter.formatter.modifiers.duplicate_remove.class%">
            <tag name="rollerworks_record_filter.formatter_modifier" priority="500"/>
        </service>

        <service id="rollerworks_record_filter.formatter_factory.modifiers.range_normalizer" class="%rollerworks_record_filter.formatter.modifiers.range_normalizer.class%">
            <tag name="rollerworks_record_filter.formatter_modifier" priority="100"/>
        </service>

        <service id="rollerworks_record_filter.formatter_factory.modifiers.values_to_range" class="%rollerworks_record_filter.formatter.modifiers.values_to_range.class%">
            <tag name="rollerworks_record_filter.formatter_modifier" priority="80"/>
        </service>

        <service id="rollerworks_record_filter.formatter_factory.modifiers.compare_normalizer" class="%rollerworks_record_filter.formatter.modifiers.compare_normalizer.class%">
            <tag name="rollerworks_record_filter.formatter_modifier" priority="50"/>
        </service>

        <service id="rollerworks_record_filter.formatter_factory.modifiers.value_optimizer" class="%rollerworks_record_filter.formatter.modifiers.value_optimizer.class%">
            <tag name="rollerworks_record_filter.formatter_modifier" priority="-128"/>
        </service>

    </services>
</container>
